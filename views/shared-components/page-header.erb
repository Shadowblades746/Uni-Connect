<link rel="stylesheet" href="/css/page-elements/page-header.css">

<header>
  <div id="header-container">
    <p>Welcome, <%= @user.first_names %>!</p>
    <% if @user.respond_to?(:profile_picture) && !@user.profile_picture.nil? %>
      <a href="/dashboard/profile-page">
        <img id="profile-picture" alt="pfp" src="data:image/jpeg;base64,<%= Base64.encode64(@user.profile_picture) %>">
      </a>
    <% else %>
      <% if @user.is_a?(Admins) %>
        <img id="profile-picture" alt="pfp" src="/images/admin-default-picture.png">
      <% else %>
        <img id="profile-picture" alt="pfp" src="/images/student-default-picture.png">
      <% end %>
    <% end %>
  </div>
</header>