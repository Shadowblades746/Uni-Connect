<html>
<head>
  <title>UniConnect Admins: Change Password</title>
  <link rel="stylesheet" href="/css/main.css">
  <link rel="stylesheet" href="/css/pages/main-homepage.css">
  <link rel="stylesheet" href="/css/pages/form.css">
  <link rel="stylesheet" href="/css/fonts/outfit.css">
</head>

<body>
<header>
  <a href="/">
    <image src="images/back-button.png" class="backButton">
  </a>
</header>

<main>
  <form action="/admin-change-password" method="post">

    <h1>Change Password</h1>

    <label for="password">Password:</label>
    <input class="text_input" type="password" id="password" name="password" required>

    <button class="submit_button" type="submit">Confirm</button>

    <% if locals[:error] %>
      <p class="error"><%= locals[:error] %></p>
    <% end %>
  </form>
</main>

<%= erb :"shared-components/page-footer" %>
</body>
</html>